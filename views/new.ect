<% extend "layout" %>

	<section class="post">
		<h1>New Post</h1>

		<form method="post" action="post">
			<p>
				Post Name: <input name="name" /><br />
				Post URL : <input name="url" /><br />
				Password : <input name="password" type="password" /><br />

				<textarea name="text"></textarea>

				<input type="submit" />
			</p>
		</form>
	</section>