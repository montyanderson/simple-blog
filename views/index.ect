<!DOCTYPE html>
<html>
	<head>

		<meta charset="utf-8" />

		<title><%- @title %></title>

		<link href="/style.css" rel="stylesheet" />
		<link href="/Buttons/css/buttons.min.css" rel="stylesheet" />
		<link href="/font-awesome/css/font-awesome.min.css" rel="stylesheet" />

	</head>
	<body>

		<section class="title">
			<h1><a href="/"><%- @title %></a></h1>
		</section>

		<% for post in @posts : %>

		<section class="post">
			<h2><%- post.title %></h2>

			<p><%- post.text %></p>
		</section>
		<% end %>

		<section id="next-page">
			<h2>
				<a href="/page/<%- @next %>" 
				class="button button-glow button-border button-rounded button-primary">
				Next Page </a>
			</h2>
		</section>

	</body>
</html>