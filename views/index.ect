<% extend "layout" %>

		<% for post in @posts : %>

		<section class="post">
			<h2><%- post.title %> - <%- post.date %></h2>

			<p><%- post.text %></p>
		</section>
		<% end %>

		<section id="next-page">
			<h2>
				<a href="/page/<%- @next %>" 
				class="button button-glow button-border button-rounded button-primary">
				Next Page </a>
			</h2>
		</section>